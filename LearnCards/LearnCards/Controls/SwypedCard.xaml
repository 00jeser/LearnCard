<?xml version="1.0" encoding="utf-8" ?>
<ContentView xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml" xmlns:ct="http://xamarin.com/schemas/2020/toolkit" xmlns:controls="clr-namespace:LearnCards.Controls"
             x:Class="LearnCards.Controls.SwypedCard">
    <ContentView.Content>
        <Grid BackgroundColor="Transparent">
            <Grid.GestureRecognizers>
                <PanGestureRecognizer x:Name="PanGuesture"/>
                <TapGestureRecognizer x:Name="TapGuesture"/>
            </Grid.GestureRecognizers>
            <Frame WidthRequest="250" HeightRequest="250" BackgroundColor="{AppThemeBinding Dark=#333, Light=#DDD, Default=#DDD}" x:Name="frame" HorizontalOptions="Center" VerticalOptions="Center">
                <controls:AutoSizedLabel HorizontalOptions="Fill" VerticalOptions="Fill" HorizontalTextAlignment="Center" VerticalTextAlignment="Center" x:Name="lab" Text="dwa1"/>
            </Frame>
        </Grid>
    </ContentView.Content>
</ContentView>