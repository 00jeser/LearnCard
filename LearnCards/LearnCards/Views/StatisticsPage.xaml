<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:plugin="clr-namespace:ProgressRingControl.Forms.Plugin;assembly=ProgressRing.Forms.Plugin"
             x:Class="LearnCards.Views.StatisticsPage">
    <ContentPage.Content>
        <Grid HorizontalOptions="Center" VerticalOptions="Center" WidthRequest="200" HeightRequest="300">
            <Grid.RowDefinitions>
                <RowDefinition Height="*"/>
                <RowDefinition Height="60"/>
            </Grid.RowDefinitions>
            <plugin:ProgressRing ScaleX="-1" x:Name="ring" RingProgressColor="{AppThemeBinding Dark=white, Default=black}" RingBaseColor="Gray"/>
            <Button Text="Далее" Grid.Row="1" Clicked="Button_Clicked"/>
        </Grid>
    </ContentPage.Content>
</ContentPage>